# Union Digitale API Configuration

# Server
PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/union_digitale?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Stripe (Card payments)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# MonCash (Haiti mobile money - Digicel)
MONCASH_CLIENT_ID=your-moncash-client-id
MONCASH_CLIENT_SECRET=your-moncash-secret
MONCASH_MODE=sandbox

# NatCash (Haiti mobile money - Natcom)
NATCASH_MERCHANT_ID=your-natcash-merchant-id
NATCASH_SECRET_KEY=your-natcash-secret-key
NATCASH_MERCHANT_NUMBER=4040-XXXX
NATCASH_MODE=sandbox

# Backend URL (for payment callbacks)
BACKEND_URL=http://localhost:5000

# Cashback
CASHBACK_EXPIRY_DAYS=90
CASHBACK_MONTHLY_CAP=5000

# Points
POINTS_VALUE_HTG=10
POINTS_MAX_PERCENT=20
POINTS_MIN_ORDER_HTG=1000
POINTS_EXPIRY_DAYS=365
POINTS_EXPIRY_SOON_DAYS=14
PAYOUT_MIN_HTG=2000
SUPER_ADMIN_EMAILS=
RISK_CRON_ENABLED=true
RISK_CRON_SCHEDULE="30 3 * * *"
RISK_CRON_BATCH_SIZE=200

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@uniondigitale.ht
