# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase App Check (reCAPTCHA v3)
# Get your site key from: https://console.cloud.google.com/security/recaptcha
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_v3_site_key

# Stripe Configuration (Publishable key - safe to commit)
# Get your key from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# MonCash Configuration
VITE_MONCASH_MODE=sandbox

# App Configuration
VITE_APP_NAME=Union Digitale
VITE_APP_URL=http://localhost:5173

# Algolia Search (Phase 1)
VITE_ALGOLIA_APP_ID=your_algolia_app_id
VITE_ALGOLIA_SEARCH_KEY=your_algolia_search_key

# Sentry Monitoring (Phase 1)
# Get your DSN from: https://sentry.io/settings/projects/
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ENABLE_SENTRY=true
VITE_SENTRY_ENVIRONMENT=production
